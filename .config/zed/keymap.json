// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
      // "ctrl-w": null,
      "ctrl-d": "editor::DeleteLine",
      "ctrl-y": "editor::Redo",
      "ctrl-f": "buffer_search::DeployReplace",
      "ctrl-alt-l": "editor::Format",
      "ctrl-alt-down": "editor::DuplicateLineDown",
      "ctrl-alt-up": "editor::DuplicateLineUp",
      "ctrl-h": "editor::FindAllReferences"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-w": ["pane::CloseActiveItem", { "close_pinned": false }]
    }
  }
]
