#        format_down = "E: down"
#}

battery 1 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "󰁽"
        status_bat = "󰁽"
        status_unk = "󰂃"
        status_full = "󰁹"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
#        format = "%status %percentage %remaining"
#        path = "/sys/class/power_supply/BAT0/uevent"
}

