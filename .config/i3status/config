disk "/" {
        format = "󰋊 %percentage_used"
	threshold_type = percentage_avail
	low_threshold = 5
}

memory {
        format = "󰍛 %used"
        threshold_degraded = 15%
        format_degraded = "󰍛 LOW %available avail."
	threshold_critical = 8%
}

